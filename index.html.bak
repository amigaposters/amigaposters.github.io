<!DOCTYPE html>

<html>

{% include head.html %}

<body class="antialiased hide-extras">

  <!-- data-offcanvas -->
  <div class="marketing off-canvas-wrap" data-offcanvas>
    <div class="inner-wrap">

    {% include navbar.html %}

    <!-- header -->
    <header class="masthead" id='masthead'></header>

    <!-- main-content -->
    <section id="main-content" role="main" class="scroll-container">

      <!-- script -->
      <script type="text/javascript">
        $(function(){
          $('#menu_item_index').addClass('is_active');
        });
      </script>

      <!-- row -->
      <div class="row">
        
        <!-- large-8 -->
        <div class="large-8 medium-8 columns">
          <div class="markdown-body home-categories">

            {% for post in paginator.posts %}
              <!-- article -->
              <div class="article">
                <a class="clearlink" href="{{ post.url | relative_url }}">
                  <h1>{{ post.title }}</h1>
                  <div class="a-content">
                    <div class="a-content-text">
                      {% if post.lang == "en" %}
                      <p>{{ post.content | strip_html | truncatewords: 50 }}</p>
                      {% elsif post.lang == "ja" %}
                      <p>{{ post.content | strip_html | truncate: 150 }}</p>
                      {% endif %}
                    </div>
                  </div>
                </a>
                <div class="read-more clearfix">
                  <div class="more-left left">
                    <a href="{{ post.url | relative_url }}">Read more</a>&nbsp;&nbsp; 
                    <span class="date"><time>{{ post.date | date: '%B %d, %Y' }}</time></span>
                    <span>category:&nbsp;</span> 
                    <span class="posted-in"><a href="{{ "/categories/" | absolute_url}}#{{ post.categories }}">{{ post.categories }}</a>
                    </span>
                  </div>
                  <div class="more-right right"> 
                    <span class="comments"><a href="{{ post.url | relative_url }}#disqus_thread">comments</a></span>
                </div>
                </div>
              </div>
            {% endfor %}

              <!-- page nation -->
              {% if paginator.total_pages != 1 %}
              <div class="row">
                <div class="large-6 columns">
                  {% if paginator.previous_page %}
                  <p class="text-left" style="padding-top:25px;"> <a href="{{ paginator.previous_page_path | relative_url }}">Prev Page «</a> </p> 
                  {% endif %}
                </div>
                <!--
                <div class="large-6 columns">
                  <p class="text-right" style="padding-top:25px;">{{ paginator.page }} / {{ paginator.total_pages }}</p>
                </div>
                -->
                <div class="large-6 columns">
                  {% if paginator.next_page %}
                  <p class="text-right" style="padding-top:25px;"> <a href="{{ paginator.next_page_path | relative_url }}">» Next Page</a> </p>
                  {% endif %}
                </div>
              </div>
              {% endif %}

          </div>
        </div>

        <!-- large 4 -->
        <div class="large-4 medium-4 columns">
          <div class="hide-for-small">

            {% include sidebar.html %}

          </div>
        </div>

      </div>
      <!-- row -->

    </section>
    <!-- section -->

  </div>
</div>

{% include footer.html %}

{% include scripts.html %}

{% include google-analytics.html %}

</body>
</html>
